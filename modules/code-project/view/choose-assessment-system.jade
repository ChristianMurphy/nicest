extends ../../shared-template/default.jade

block title
    title Choose Issue Tracker
    
block head
    script(src='//code.jquery.com/jquery-2.1.4.min.js')
    script(src='//oss.maxcdn.com/semantic-ui/2.1.3/components/transition.min.js')
    script(src='//oss.maxcdn.com/semantic-ui/2.1.3/components/checkbox.min.js')

block body
    .ui.container
        .ui.five.top.attached.steps
            .completed.step
                i.users.icon
                .content
                    .title Students
                    .description Choose Students to Participate
            .completed.step
                i.git.square.icon
                .content
                    .title Repository
                    .description Choose a Seed Repository
            .completed.step
                i.columns.icon
                .content
                    .title Issues
                    .description Choose Issue Tracker
            .active.step
                i.info.icon
                .content
                    .title Assessment
                    .description Choose Assessment System
            .disabled.step
                i.info.icon
                .content
                    .title Confirm
                    .description Confirm Selections
        form.ui.attached.large.form(action = prefix + '/recipe/code-project/choose-assessment-system', method='POST')
            .ui.attached.stacked.segment
                .field
                    .ui.toggle.checkbox
                        input(type='checkbox', name='useCADashboard', class='hidden')
                        label Use CA Dashboard as an Assessment System
                .field
                    label CA Dashboard URL
                    input(type='text', name='serverUrl', value="http://swent0linux.asu.edu:3000/cadashboard", placeholder='http://example.com/ca_dashboard')
                        
                a.ui.large.secondary.submit.button(href = prefix + '/recipe/code-project/choose-issue-tracker') previous
                input.ui.large.teal.submit.button(type='submit', value='next')
    script.
        $('.ui.checkbox').checkbox();
        var dashboardCheckbox = $('input[name=useCADashboard]');
        var serverUrl = $('input[name=serverUrl]');
        dashboardCheckbox.change(function () {
            serverUrl.prop('required', dashboardCheckbox.is(':checked'));
        });
