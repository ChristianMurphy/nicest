extends ../../shared-template/default.jade

block title
    title Login to Github

block body
    .ui.container
        form.ui.large.form.stacked.segment(action = prefix + '/recipe/github/login', method='POST')
            input(type='hidden', name='redirect', value=redirect)
            h1.ui.header Login to Github
            .field
                .ui.left.icon.input
                    i.user.icon
                    input(type='text', name='username', placeholder='username')
            .field
                .ui.left.icon.input
                    i.lock.icon
                    input(type='password', name='password', placeholder='password')
            input.ui.fluid.large.teal.submit.button(type='submit', value='submit')
