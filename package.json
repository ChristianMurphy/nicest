{
  "name": "nicest",
  "version": "1.1.0",
  "description": "nicely integrating complex education software together",
  "main": "lib/server.js",
  "bin": {
    "nicest": "bin/cli.js"
  },
  "scripts": {
    "commitmsg": "commitlint -e",
    "cz": "git-cz",
    "precommit": "npm test",
    "postinstall": "jsdoc --recurse lib modules tasks --destination docs",
    "test": "eslint . --ignore-path=.gitignore && pug-lint modules && remark *.md modules/**/*.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChristianMurphy/nicest.git"
  },
  "keywords": [
    "education"
  ],
  "author": {
    "name": "Christian Murphy",
    "email": "Christian.Murphy.42@gmail.com",
    "url": "https://github.com/ChristianMurphy"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ChristianMurphy/nicest/issues"
  },
  "homepage": "https://github.com/ChristianMurphy/nicest#readme",
  "engines": {
    "node": "^8.0.0",
    "npm": "^5.1.0"
  },
  "files": [
    "bin",
    "lib",
    "modules",
    "tasks"
  ],
  "preferGlobal": true,
  "dependencies": {
    "bell": "^8.7.0",
    "boom": "^6.0.0",
    "chalk": "^2.1.0",
    "cliui": "^3.2.0",
    "good": "^7.2.0",
    "good-file": "^6.0.1",
    "good-squeeze": "^5.0.2",
    "hapi": "^16.5.2",
    "hapi-auth-cookie": "^7.0.0",
    "inert": "^4.2.1",
    "joi": "^11.0.2",
    "jsdoc": "^3.5.4",
    "libxmljs": "^0.18.7",
    "lout": "^10.0.2",
    "mongoose": "^4.11.7",
    "nodegit": "^0.20.1",
    "octokat": "^0.9.2",
    "pm2": "^2.5.0",
    "pug": "^2.0.0-rc.3",
    "read": "^1.0.7",
    "request": "^2.81.0",
    "rimraf": "^2.6.1",
    "scooter": "^4.0.0",
    "vision": "^4.1.1",
    "yar": "^8.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^3.1.2",
    "@commitlint/config-angular": "^3.1.1",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "~4.8.0",
    "eslint-config-airbnb-base": "^11.3.2",
    "eslint-plugin-import": "^2.7.0",
    "husky": "^0.14.3",
    "pug-lint": "~2.5.0",
    "pug-lint-config-clock": "^2.0.0",
    "remark-cli": "^4.0.0",
    "remark-preset-lint-consistent": "^2.0.1",
    "remark-preset-lint-recommended": "^3.0.1"
  },
  "eslintConfig": {
    "root": true,
    "extends": "airbnb-base",
    "rules": {
      "indent": [
        "error",
        4
      ],
      "max-len": [
        "error",
        120
      ],
      "no-underscore-dangle": "off",
      "no-restricted-syntax": "off"
    }
  },
  "pugLintConfig": {
    "extends": "clock",
    "validateIndentation": 4
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "preset-lint-consistent"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
