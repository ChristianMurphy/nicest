{
  "name": "nicest",
  "version": "1.1.0",
  "description": "nicely integrating complex education software together",
  "main": "lib/server.js",
  "bin": {
    "nicest": "bin/cli.js"
  },
  "scripts": {
    "precommit": "npm test",
    "postinstall": "jsdoc --recurse lib modules tasks --destination docs",
    "test": "eslint . --inline-config=false --ignore-path=.gitignore && pug-lint modules && remark *.md modules/**/*.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChristianMurphy/nicest.git"
  },
  "keywords": [
    "education"
  ],
  "author": {
    "name": "Christian Murphy",
    "email": "Christian.Murphy.42@gmail.com",
    "url": "https://github.com/ChristianMurphy"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ChristianMurphy/nicest/issues"
  },
  "homepage": "https://github.com/ChristianMurphy/nicest#readme",
  "engines": {
    "node": "^6.0.0",
    "npm": ">=3.8.0"
  },
  "files": [
    "bin",
    "lib",
    "modules",
    "tasks"
  ],
  "preferGlobal": true,
  "dependencies": {
    "bell": "^8.7.0",
    "boom": "^5.1.0",
    "chalk": "^2.0.1",
    "cliui": "^3.2.0",
    "good": "^7.2.0",
    "good-file": "^6.0.1",
    "good-squeeze": "^5.0.2",
    "hapi": "^16.4.3",
    "hapi-auth-cookie": "^7.0.0",
    "inert": "^4.2.0",
    "joi": "^10.6.0",
    "jsdoc": "^3.4.3",
    "libxmljs": "^0.18.4",
    "lout": "^10.0.1",
    "mongoose": "^4.10.8",
    "nodegit": "^0.20.0",
    "octokat": "^0.9.0",
    "pm2": "^2.5.0",
    "pug": "^2.0.0-rc.2",
    "read": "^1.0.7",
    "request": "^2.81.0",
    "rimraf": "^2.6.1",
    "scooter": "^4.0.0",
    "vision": "^4.1.1",
    "yar": "^8.1.2"
  },
  "devDependencies": {
    "eslint": "^4.0.0",
    "husky": "^0.14.0",
    "pug-lint": "^2.4.0",
    "remark-cli": "^4.0.0",
    "remark-preset-lint-consistent": "^2.0.0",
    "remark-preset-lint-recommended": "^3.0.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": "eslint:all",
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "complexity": [
        "warn",
        10
      ],
      "dot-location": [
        "error",
        "property"
      ],
      "func-style": [
        "error",
        "declaration"
      ],
      "guard-for-in": "off",
      "id-match": [
        "error",
        "^[a-zA-Z]+$"
      ],
      "indent": [
        "error",
        4,
        {
          "MemberExpression": 1,
          "SwitchCase": 1
        }
      ],
      "max-len": [
        "error",
        120
      ],
      "max-nested-callbacks": [
        "error",
        2
      ],
      "no-console": "off",
      "no-magic-numbers": [
        "error",
        {
          "ignoreArrayIndexes": true,
          "enforceConst": true
        }
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_id"
          ]
        }
      ],
      "one-var": [
        "error",
        "never"
      ],
      "padded-blocks": [
        "error",
        "never"
      ],
      "quote-props": [
        "error",
        "as-needed"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "spaced-comment": [
        "error",
        "always",
        {
          "markers": [
            "*"
          ]
        }
      ],
      "valid-jsdoc": [
        "error",
        {
          "prefer": {
            "return": "returns",
            "method": "function",
            "func": "function",
            "arg": "param",
            "argument": "param",
            "prop": "property"
          }
        }
      ]
    }
  },
  "pugLintConfig": {
    "disallowAttributeConcatenation": null,
    "disallowAttributeInterpolation": true,
    "disallowAttributeTemplateString": "all",
    "disallowBlockExpansion": true,
    "disallowClassAttributeWithStaticValue": true,
    "disallowClassLiteralsBeforeAttributes": null,
    "disallowClassLiteralsBeforeIdLiterals": true,
    "disallowClassLiterals": null,
    "disallowDuplicateAttributes": true,
    "disallowHtmlText": true,
    "disallowIdAttributeWithStaticValue": true,
    "disallowIdLiteralsBeforeAttributes": null,
    "disallowIdLiterals": null,
    "disallowLegacyMixinCall": true,
    "disallowMultipleLineBreaks": true,
    "disallowSpaceAfterCodeOperator": null,
    "disallowSpacesInsideAttributeBrackets": true,
    "disallowSpecificAttributes": null,
    "disallowSpecificTags": [
      "acronym",
      "applet",
      "b",
      "basefont",
      "big",
      "center",
      "dir",
      "font",
      "frame",
      "frameset",
      "noframes",
      "strike",
      "tt"
    ],
    "disallowStringConcatenation": true,
    "disallowStringInterpolation": true,
    "disallowTagInterpolation": true,
    "disallowTemplateString": true,
    "maximumNumberOfLines": 150,
    "requireClassLiteralsBeforeAttributes": true,
    "requireClassLiteralsBeforeIdLiterals": null,
    "requireIdLiteralsBeforeAttributes": true,
    "requireLineFeedAtFileEnd": true,
    "requireLowerCaseAttributes": true,
    "requireLowerCaseTags": true,
    "requireSpaceAfterCodeOperator": true,
    "requireSpacesInsideAttributeBrackets": null,
    "requireSpecificAttributes": null,
    "requireStrictEqualityOperators": true,
    "validateAttributeQuoteMarks": "'",
    "validateAttributeSeparator": ", ",
    "validateDivTags": true,
    "validateExtensions": true,
    "validateIndentation": 4,
    "validateLineBreaks": "LF",
    "validateSelfClosingTags": true,
    "validateTemplateString": true
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "preset-lint-consistent"
    ]
  }
}
