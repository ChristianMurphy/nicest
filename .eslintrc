extends: 'eslint:recommended'

env:
    node: true
    es6: true

rules:
    # Possible Errors
    no-console: 0
    no-extra-parens: 2
    valid-jsdoc:
        - 2
        - prefer:
            return: returns
            method: function
            func: function
            arg: param
            argument: param
            prop: property
    no-unexpected-multiline: 2

    # Best Practices
    complexity:
        - 1
        - 10
    consistent-return: 2
    curly: 2
    dot-location:
        - 2
        - property
    dot-notation: 2
    eqeqeq: 2
    guard-for-in: 2
    no-caller: 2
    no-div-regex: 2
    no-else-return: 2
    no-eq-null: 2
    no-eval: 2
    no-extend-native: 2
    no-extra-bind: 2
    no-floating-decimal: 2
    no-implied-eval: 2
    no-iterator: 2
    no-labels: 2
    no-lone-blocks: 2
    no-loop-func: 2
    no-multi-spaces: 2
    no-multi-str: 2
    no-native-reassign: 2
    no-new-func: 2
    no-new-wrappers: 2
    no-new: 2
    no-octal-escape: 2
    no-octal: 2
    no-param-reassign: 1
    no-process-env: 2
    no-proto: 2
    no-return-assign: 2
    no-script-url: 2
    no-self-compare: 2
    no-sequences: 2
    no-throw-literal: 2
    no-unused-expressions: 2
    no-useless-call: 2
    no-useless-concat: 2
    no-void: 2
    no-with: 2
    no-warning-comments: 1
    radix: 2
    yoda: 2

    # Strict Mode
    strict:
        - 2
        - global

    # Variables
    no-use-before-define:
        - 2
        - nofunc

    # Node.js
    handle-callback-err: 2
    no-new-require: 2
    no-path-concat: 2
    no-process-exit: 2
    no-sync: 2

    # Stylistic Issues
    array-bracket-spacing: 2
    block-spacing: 2
    brace-style: 2
    comma-spacing: 2
    comma-style: 2
    computed-property-spacing: 2
    consistent-this: 2
    eol-last: 2
    id-length:
        - 2
        - exceptions:
            - _
    id-match:
        - 2
        - ^([a-zA-Z]+|_)$
    indent:
        - 2
        - 4
    key-spacing: 2
    linebreak-style: 2
    max-nested-callbacks:
        - 2
        - 1
    new-cap: 2
    new-parens: 2
    newline-after-var: 2
    no-array-constructor: 2
    no-continue: 2
    no-inline-comments: 2
    no-lonely-if: 2
    no-multiple-empty-lines: 2
    no-new-object: 2
    no-new-object: 2
    no-ternary: 2
    no-new-object: 2
    no-trailing-spaces: 2
    no-underscore-dangle: 1
    object-curly-spacing: 2
    operator-assignment: 2
    operator-linebreak: 2
    padded-blocks:
        - 2
        - never
    quotes:
        - 2
        - single
    quote-props:
        - 2
        - as-needed
    semi: 2
    semi-spacing: 2
    space-after-keywords: 2
    space-before-blocks: 2
    space-before-function-paren: 2
    space-in-parens: 2
    space-return-throw-case: 2
    space-infix-ops: 2
    space-unary-ops: 2
    spaced-comment:
        - 2
        - always
        - markers:
            - '*'
    # ECMAScript 6
    arrow-spacing: 2
    arrow-parens: 2
    generator-star-spacing:
        - 2
        - both
    no-const-assign: 2
    no-var: 2
    prefer-arrow-callback: 0 # Delay this until Node JS adds stable support for arrow functions
    prefer-const: 2
    prefer-reflect: 2
    require-yield: 2
